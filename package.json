{
  "name": "twitter-snap",
  "version": "0.0.59",
  "description": "Create beautiful Tweet images fast",
  "keywords": [
    "twitter",
    "screenshots"
  ],
  "homepage": "https://github.com/fa0311/twitter-snap",
  "bugs": "https://github.com/fa0311/twitter-snap/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fa0311/twitter-snap.git"
  },
  "license": "MIT",
  "author": "ふぁ @fa0311",
  "type": "module",
  "exports": "./dist/main.js",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "bin": {
    "twitter-snap": "bin/run.js"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc -p tsconfig.build.json",
    "lint": "eslint . --ext .ts",
    "fix": "eslint . --ext .ts --fix",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "postpack": "shx rm -f oclif.manifest.json",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "posttest": "npm run lint",
    "version": "oclif readme && git add README.md"
  },
  "oclif": {
    "bin": "twitter-snap",
    "commands": {
      "strategy": "single",
      "target": "./dist/commands/index.js"
    },
    "hooks": {
      "preparse": "./dist/hooks/interactive.js"
    },
    "dirname": "twitter-snap",
    "default": ".",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@oclif/plugin-warn-if-update-available"
    ],
    "topicSeparator": " ",
    "topics": {},
    "warn-if-update-available": {
      "message": "Update available! Run npm i -g twitter-snap to update"
    }
  },
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "@oclif/core": "^4.1.0",
    "@oclif/plugin-help": "^6.2.19",
    "@oclif/plugin-plugins": "^5.4.22",
    "@oclif/plugin-warn-if-update-available": "^3.1.28",
    "@vercel/og": "^0.6.4",
    "cli-color": "^2.0.4",
    "log-symbols": "^7.0.0",
    "ora": "^8.1.1",
    "puppeteer": "^23.11.0",
    "twitter-openapi-typescript": "^0.0.45",
    "twitter-snap-core": "^0.0.43"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4.1",
    "@types/chai": "^5.0",
    "@types/cli-color": "^2.0.6",
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/mocha": "^10.0",
    "@types/node": "^22.7",
    "@types/react": "^18.3",
    "chai": "^5.1",
    "eslint": "^8.56",
    "eslint-config-oclif": "^5.2",
    "eslint-config-oclif-typescript": "^3.1",
    "eslint-config-prettier": "^9.1",
    "mocha": "^10.7",
    "oclif": "^4.15",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
