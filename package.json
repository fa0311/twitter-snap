{
  "name": "twitter-snap",
  "version": "0.0.61",
  "description": "Create beautiful Tweet images fast",
  "keywords": [
    "twitter",
    "screenshots"
  ],
  "homepage": "https://github.com/fa0311/twitter-snap",
  "bugs": "https://github.com/fa0311/twitter-snap/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fa0311/twitter-snap.git"
  },
  "license": "MIT",
  "author": "ふぁ @fa0311",
  "type": "module",
  "exports": "./dist/main.js",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "bin": {
    "twitter-snap": "./bin/run.js"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "oclif": {
    "bin": "twitter-snap",
    "dirname": "twitter-snap",
    "commands": {
      "strategy": "single",
      "target": "./dist/commands/index.js"
    },
    "hooks": {
      "preparse": "./dist/hooks/interactive.js"
    },
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@oclif/plugin-warn-if-update-available"
    ],
    "topicSeparator": " ",
    "topics": {},
    "warn-if-update-available": {
      "message": "Update available! Run npm i -g twitter-snap to update"
    }
  },
  "dependencies": {
    "@clack/prompts": "^0.9.0",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "@oclif/plugin-warn-if-update-available": "^3",
    "@vercel/og": "^0.6.4",
    "cli-color": "^2.0.4",
    "escape-string-regexp": "^5.0.0",
    "fluent-ffmpeg": "^2.1.3",
    "graphemesplit": "^2.4.4",
    "log-symbols": "^7.0.0",
    "ora": "^8.1.1",
    "puppeteer": "^23.11.1",
    "react": "^19.0.0",
    "twitter-openapi-typescript": "^0.0.45",
    "twitter-openapi-typescript-generated": "^0.0.32"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^4",
    "@types/cli-color": "^2.0.6",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "@types/react": "^19.0.2",
    "chai": "^4",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9",
    "mocha": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
